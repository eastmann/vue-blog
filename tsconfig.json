{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "lib":
      [
        "ESNext",
        "DOM",
        "DOM.Iterable"
      ],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "typeRoots": [
      "./src",
      "./src/types",
      "./node_modules",
      "./node_modules/@types"
    ],
    "types": [
      "vite/client"
    ],
    "strict": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "outDir": "./dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true
  },
  "references": [
    { "path": "./tsconfig.node.json" }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "./dist/**/*"
  ]
}
