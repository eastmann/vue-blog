{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "lib":
      [
        "ESNext",
        "DOM",
        "DOM.Iterable"
      ],
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "noEmit": true,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "references": [
    { "path": "./tsconfig.node.json" }
  ],
  "paths": {
    "@/*": [
      "./src/*"
    ]
  },
  "typeRoots": [
    "./src",
    "./src/types",
    "./node_modules",
    "./node_modules/@types"
  ],
  "types": [
    "vite/client"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "./dist/**/*"
  ]
}
